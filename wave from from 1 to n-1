
#include <iostream>
using namespace std;
int main() {
int m,n,q,p;
//for matrxi1
cout<<"enter the number of rows";
cin>>m;
cout<<"enter the number of column";
cin>>n;

int j;
int arr[m][n];
cout<<"enter the values in array1";
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cin>>arr[i][j];
    }
}
//max


for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cout<<arr[i][j]<<" ";
    }
    cout<<endl;
}

for(int i=0;i<m;i++)
{
       if(i%2==0)
       {
           for(int j=0;j<n;j++)
           {
           cout<<arr[i][j]<<" ";
       }
       }
       else
       {
    for(int j=n-1;j>=0;j--)
    {
           cout<<arr[i][j]<<" ";
           
       }
    }
}



    return 0;
}
