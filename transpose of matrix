
#include <iostream>
#include<vector>
using namespace std;
int main() {
int m,n;
cout<<"enter the number of rows";
cin>>m;
cout<<"enter the number of column";
cin>>n;
int j;
int arr[m][n];
int brr[m][n];
cout<<"enter the values in array1";
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cin>>arr[i][j];
    }
}
//max

cout<<"enter the values in array2";
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cin>>brr[i][j];
    }
}

for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cout<<arr[i][j]<<" ";
    }
    cout<<endl;
}

for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cout<<brr[i][j]<<" ";
    }
    cout<<endl;
}
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        brr[i][j]+=arr[i][j];
    }
}
cout<<"mtarix after addition"<<endl;
for(int i=0;i<m;i++)
{
    for(int j=0;j<n;j++)
    {
        cout<<brr[i][j]<<" ";
    }
    cout<<endl;
}
cout<<"transpose of matrix is "<<endl;
for(int j=0;j<n;j++)
{
    for(int i=0;i<n;i++)
    {
        cout<<brr[i][j]<<" ";
    }
    cout<<endl;
}



    return 0;
}
